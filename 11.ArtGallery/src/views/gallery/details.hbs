<main>
    <section id="details-page">
        <h1>Details</h1>
        <article class="details-card">

            <article class="details-card-text">
                <h2>Title:<br> {{title}}</h2>
                <h3>Author: {{author.username}}</h3>
                <h3>Painting technique: {{paintingTech}}</h3>
                <h3>Certificate of authenticity: {{certificate}}</h3>

                {{#if isAuthenticated}}
                <div class="buttons">
                    {{#if isOwner}}
                    <a href="/gallery/{{_id}}/edit" class="btn-edit">Edit</a>
                    <a href="/gallery/{{_id}}/delete" class="btn-delete">Delete</a>
                    {{else}}
                    {{#unless isShared}}
                    <a href="/gallery/{{_id}}/share" class="btn-share">Share publication</a>
                    {{else}}
                    <p class="shared-pub">You already shared this publication</p>
                    {{/unless}}
                    {{/if}}
                </div>
                {{/if}}

            </article>

            <article class="details-card-image">
                <img src="{{picture}}" alt="art-image2">
            </article>

        </article>
    </section>
</main>