
    <main>
        <section class="crypto-search">
            <h1>Search</h1>

            <form class="search-form"  method="POST">
                <input type="text" class="search-coin" name="name" placeholder="Search here...">
                <select id="payment" name="method">
                    <option >Crypto Wallet</option>
                    <option >Credit Card</option>
                    <option >Debit Card</option>
                    <option >PayPal</option>
                </select>
                <button type="submit" class="btn-search">Search</button>
            </form>
            {{#each cryptos}}
            <div class="search-result">
                <div class="search-list">
                    <div class="coin">
                        <div class="coin-img">
                            <img src="{{image}}">
                        </div>
                        <div class="coin-info">
                            <h1>{{name}}</h1>
                            <p><span>Price: </span>${{price}}</p>
                            <p><span>Payment: </span>{{method}}</p>
                        </div>

                        <a href="/cryptos/{{_id}}/details" class="btn-details">Details</a>
                    </div>
                </div>

            </div>
            {{else}}
             <div class="no-match">
                <p>No match was found!</p>
            </div> 
            {{/each}}
        </section>
    </main>
