<main>
    <section id="deatils-page">
        <div class="wrapper">
            <div class="product-img">
                <img src="{{image}}">
            </div>
            <div class="product-info">
                <div class="product-text">
                    <div class="product-text">
                        <h1>Name: {{name}}</h1>
                        <h2>Type: {{type}}</h2>
                        <h4>Year: {{year}}</h4>
                        <h4>City: {{city}}</h4>
                        <p>Description: {{description}}</p>

                        {{#if peopleRent}}
                        <p>People rented this housing: {{peopleRent}}</p>
                        {{else}}
                        <p>People rented this housing: There are no tenants yet.</p>
                        {{/if}}
                    </div>
                </div>

                {{#if isAuthenticated}}
                <div class="product-btn">
                    {{#if isOwner}}
                    <a href="/houses/{{_id}}/edit" class="edit">Edit</a>
                    <a href="/houses/{{_id}}/delete" class="remove">Delete</a>
                    {{else}}
                    {{#unless isRent}}
                    <a href="/houses/{{_id}}/rent" class="rentHome">Rent a home, available {{pieces}} housing</a>
                    {{else}}
                    <p class="alRentHome">You have already rent this home</p>
                    {{/unless}}
                    {{#unless isAvailable}}
                    <p class="no-housing">No Housing Available!</p>
                    {{/unless}}
                    {{/if}}
                </div>
                {{/if}}
            </div>
        </div>
    </section>
</main>